@page
@model Marketplace.App.Pages.FillMarket.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>MarketProduct</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MarketProduct.MarketId" class="control-label"></label>
                <select asp-for="MarketProduct.MarketId" class="form-control" asp-items="ViewBag.MarketId"></select>
                <span asp-validation-for="MarketProduct.MarketId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MarketProduct.ProductId" class="control-label"></label>
                <select asp-for="MarketProduct.ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
                <span asp-validation-for="MarketProduct.ProductId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="MarketProduct.Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
